{
  "name": "moedim",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "contracts"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:mobile\"",
    "dev:api": "npm run -w apps/api start:dev",
    "dev:mobile": "npm run -w apps/mobile start",
    "build": "npm run build:api && npm run build:mobile",
    "build:api": "npm run -w apps/api build",
    "build:mobile": "npm run -w apps/mobile build",
    "build:web": "npm run -w apps/mobile build:web",
    "start": "npm run start:api",
    "start:api": "npm run -w apps/api start:prod",
    "db:migrate": "npm run -w apps/api db:migrate",
    "db:migrate:deploy": "npm run -w apps/api db:migrate:deploy",
    "db:generate": "npm run -w apps/api db:generate",
    "db:seed": "npm run -w apps/api db:seed",
    "db:studio": "npm run -w apps/api db:studio",
    "contracts:compile": "npm run -w contracts compile",
    "contracts:deploy": "npm run -w contracts deploy",
    "test": "npm run test:api && npm run test:mobile",
    "test:api": "npm run -w apps/api test",
    "test:mobile": "npm run -w apps/mobile test"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@nestjs/platform-socket.io": "^11.1.6",
    "@nestjs/websockets": "^11.1.6",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "socket.io": "^4.8.1"
  }
}
