{
  "name": "moedim",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "contracts"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:mobile\"",
    "dev:api": "npm run start:dev --workspace=apps/api",
    "dev:mobile": "npm start --workspace=apps/mobile",
    "build": "npm run build:api && npm run build:mobile",
    "build:api": "npm run build --workspace=apps/api",
    "build:mobile": "npm run build --workspace=apps/mobile",
    "build:web": "npm run build:web --workspace=apps/mobile",
    "start": "npm run start:api",
    "start:api": "npm run start:prod --workspace=apps/api",
    "db:migrate": "npx prisma migrate dev --workspace=apps/api",
    "db:migrate:deploy": "npx prisma migrate deploy --workspace=apps/api",
    "db:generate": "npx prisma generate --workspace=apps/api",
    "db:seed": "npx prisma db seed --workspace=apps/api",
    "db:studio": "npx prisma studio --workspace=apps/api",
    "contracts:compile": "npx hardhat compile --workspace=contracts",
    "contracts:deploy": "npx hardhat run scripts/deploy.js --workspace=contracts",
    "test": "npm run test:api && npm run test:mobile",
    "test:api": "npm test --workspace=apps/api",
    "test:mobile": "npm test --workspace=apps/mobile"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@nestjs/platform-socket.io": "^11.1.6",
    "@nestjs/websockets": "^11.1.6",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "socket.io": "^4.8.1"
  }
}
